<%= simple_form_for(@staff) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :name, input_html: { class: 'form-control'}, label: '姓名' %>
    <%= f.input :number, input_html: { class: 'form-control'}, label: '工号' %>
    <%= f.input :gender, input_html: { class: 'form-control'}, label: '性别', include_blank: false, collection: [['男', 1],['女', 2]] %>
    <%= f.input :telephone, input_html: { class: 'form-control'}, label: '联系电话' %>
    <%= f.input :address, input_html: { class: 'form-control'}, label: '联系地址' %> 
    <%= f.input :status, input_html: { class: 'form-control'}, label: '在职状态', collection: [['在职', 1],['离职', 2]] , include_blank: false%>
  </div>

  <div class="form-group">
    <%= f.submit '保存', class: 'btn btn-primary' %>
    <%= link_to '返回', staffs_path %>
  </div>
<% end %>
