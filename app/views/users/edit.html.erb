<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default" style="margin-top:10px">
      <div class="panel-heading">
        <h3 class="panel-title">我的信息</h3> 
      </div>
      <div class="panel-body">
        <%= simple_form_for(@user) do |f| %>
          <%= f.error_notification %>
        
          <div class="form-group">
            <%= f.input :name, input_html: { class: 'form-control'}, label: '名称' %>
          </div>
          <div class="form-group">
            <%= f.input :email, input_html: { class: 'form-control'}, label: 'E-mail' %>
          </div>
         
          <div class="form-group">
            <%= f.submit '保存', class: 'btn btn-primary' %>
            <%= link_to '返回', users_path %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default" style="margin-top:10px">
      <div class="panel-heading">
        <h3 class="panel-title">修改密码</h3> 
      </div>
      <div class="panel-body">
        <%= simple_form_for(@user, :url => { :action => "update_password"}) do |f| %>
          <%= f.error_notification %>
        
          <div class="form-group">
            <%= f.input :password, input_html: { class: 'form-control'}, label: '新密码' %>
          </div>
          <div class="form-group">
            <%= f.input :password_confirmation, input_html: { class: 'form-control'}, label: '确认新密码' %>
          </div>
           <div class="form-group">
            <%= f.input :current_password, input_html: { class: 'form-control'}, label: '当前密码' %>
          </div>
         
          <div class="form-group">
            <%= f.submit '保存', class: 'btn btn-primary' %>
            <%= link_to '返回', users_path %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>

