<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :name, input_html: { class: 'form-control'}, label: '名称' %>
  </div>
  <div class="form-group">
    <%= f.input :email, input_html: { class: 'form-control'}, label: 'E-mail' %>
  </div>
  <div class="form-group">
    <%= f.input :password, input_html: { class: 'form-control'}, label: '默认密码', placeholder: 'ckgl888' %>
  </div>
  <div class="form-group">
    <%= f.submit '保存', class: 'btn btn-primary' %>
    <%= link_to '返回', users_path %>
  </div>
<% end %>
