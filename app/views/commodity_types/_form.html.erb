<%= simple_form_for(@commodity_type) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :name , input_html: { class: 'form-control'}, label: '类型名称' %>
  </div>
  <div class="form-group">
    <%= f.submit '保存', class: 'btn btn-primary' %>
    <%= link_to '返回', commodity_types_path %>
  </div>
<% end %>
